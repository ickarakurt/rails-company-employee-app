<div>Name: <%= @company.name %></div>
<div>Sub companies:
<ul>
      <% @company.all_sub_companies.each do |company| %> 
        <li>
          <div><%= company.name %> => <%=link_to('Show', company_path(company)) %></div>
        </li>
      <% end %>
    </ul>
</div>
<div>Employees:
<ul>
      <% @company.employees.each do |employee| %> 
        <li>
          <div><%= employee.name %> => <%=link_to('Show', employee_path(employee)) %></div>
        </li>
      <% end %>
    </ul>
</div>