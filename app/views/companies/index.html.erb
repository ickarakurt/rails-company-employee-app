<%= form_with url: "/companies", method: :get do |form| %>
  <%= form.label :employees_count, "Required amount of employees:" %>
  <%= form.text_field :employees_count %>
  <%= form.submit "Search" %>
<% end %>

<ul>
  <% @companies.each do |company| %> 
    <li>
      <div><%= company.name %> => <%=link_to('Show', company_path(company)) %> - <%= link_to "Delete", company_path(company), :confirm => "Are you sure?", :method => :delete %></div>
    </li>
  <% end %>
</ul>

