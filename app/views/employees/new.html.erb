<%= form_for @employee, :url => {:action => :create} do |form| %>
  <% @employee.errors.full_messages.each do |message| %>
    <div><%= message %></div>
  <% end %>
  <%= form.label :name, "Employee name:" %>
  <%= form.text_field :name %>
  <%= form.label :company_id, "Company:" %>
  <%= form.select :company_id, options_from_collection_for_select(Company.all, 'id', 'name') %>
  <%= form.submit "Submit" %>
<% end %>